{{#partial "content"}}
    {{#if editTeam}}
        <h3>Update Your Team</h3>
        <form action="/teams/{{team.id}}/update" method="post">
            <div class="form-group">
                <label for="name">Team Name</label>
                <input type="text" id="name" name="name" class="form-control" placeholder="{{team.name}}">
            </div>
            <div class="form-group">
                <label for="product">Product</label>
                <input type="text" id="product" name="product" class="form-control" placeholder="{{team.product}}">
            </div>
            <div class="form-group">
                <label for="member">Add Member</label>
                <input type="text" id="member" name="member" class="form-control">
            </div>
            <a href="/"><button type="button" class="btn btn-danger">Cancel</button></a>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    {{else}}
        <h3>Register your team!</h3>
        <form action="/teams" method="post">
            <div class="form-group">
                <label for="name">Team Name</label>
                <input type="text" id="name" name="name" class="form-control">
            </div>
            <div class="form-group">
                <label for="product">Product</label>
                <input type="text" id="product" name="product" class="form-control">
            </div>
            <a href="/"><button type="button" class="btn btn-danger">Cancel</button></a>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    {{/if}}
{{/partial}}

{{> layout.hbs}}